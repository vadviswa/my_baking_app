<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen8dp"
    app:cardBackgroundColor="@color/colorPrimaryLight"
    app:cardCornerRadius="@dimen/dimen8dp"
    app:cardElevation="@dimen/dimen6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen8dp"
        android:layout_marginBottom="@dimen/dimen8dp"
        android:orientation="vertical"
        android:padding="@dimen/dimen8dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/recipe_image"
            android:layout_width="@dimen/recipe_image"
            android:layout_height="@dimen/recipe_image" />

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen8dp"
            android:layout_marginBottom="@dimen/dimen8dp"
            android:layout_toRightOf="@id/recipe_image"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/textsize_30"
            tools:text="Recipe Name" />

        <TextView
            android:id="@+id/recipe_servings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipe_title"
            android:layout_marginLeft="@dimen/dimen8dp"
            android:layout_toRightOf="@id/recipe_image"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/textsize_20"
            tools:text="8" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
